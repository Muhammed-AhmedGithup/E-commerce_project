@model  IEnumerable<Cinema>

@{
	ViewData["title"] = "list of cinemas";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr class="text-center">
					<th>@Html.DisplayNameFor(m=>m.Logo)</th>
					<th>@Html.DisplayNameFor(m=>m.Name)</th>
					<th>@Html.DisplayNameFor(m=>m.Description)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var i in Model)
				{
					<tr>
						<td class="align-middle"><img class="rounded-circle" src="@i.Logo" alt="@i.Name" style="max-width:150px" /></td>
						<td class="align-middle">@Html.DisplayFor(m=>i.Name)</td>
						<td class="align-middle">@Html.DisplayFor(m=>i.Description)</td>
						<td class="align-middle">
							<a asp-action="Update" asp-route-id="@i.Id" class="btn btn-outline-primary" ><i class="bi bi-pencil-fill">Edite</i></a>|
							<a asp-action="Details" asp-route-id="@i.Id" class="btn btn-outline-info"><i class="bi bi-eye-fill">Details</i></a>|
							<a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-outline-danger"><i class="bi bi-trash3">Delete</i></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div class="text-white" style="position:fixed; right:25px; bottom:25px">
	<a asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>Add new</a>
</div>