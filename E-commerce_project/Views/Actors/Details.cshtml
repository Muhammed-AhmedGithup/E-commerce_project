@model Actor

@{
    ViewData["Title"] = "Create";
}

<h1 class="offset-2">add Actor</h1>
<hr />
<div class="row text">
    <div class="col-md-8 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <img id="myimg" class="border-info rounded-circle" style="max-width: 150px" />
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="control-label"></label>
                <input asp-for="ProfilePictureURL" class="form-control" readonly/>
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" readonly/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" readonly/>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-success float-right" asp-action="index">Show all</a>
                <a class="btn btn-outline-secondary float-right" asp-action="index">Edite</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('myimg');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('myimg');
            output.src = $(this).val();
        })
    </script>
}


